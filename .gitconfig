[user]
    name = mpadge
    email = mark.padgham@email.com
[core]
    autocrlf = input
    safecrlf = true
    editor = nvim
[alias]
    co = checkout
    ci = commit
    st = status -uno
    br = branch
    #hist = log --graph --all --date=short --pretty=format:'%Cred%h%Creset%x09%ad - %Cgreen%d%Cblue%s%Creset'
    hist = log --graph --date=short --pretty=format:'%Cred%h%Creset%x09%ad - %Cgreen%d%Cblue%s%Creset'
    type = cat-file -t
    dump = cat-file -p
[pull]
    rebase = true
[push]
    default = simple
#[http]
#	version = HTTP/1.1
[credential]
    helper = cache
[init]
    defaultBranch = main
[safe]
    directory = /usr/local/searxng-docker
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[fetch]
    prune = true
    pruneTags = true
    all = false
[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true
[help]
    autocorrect = prompt
